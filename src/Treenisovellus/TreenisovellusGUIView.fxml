<BorderPane stylesheets="@treenisovellus.css" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Treenisovellus.TreenisovellusGUIController">
   <top>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Muokkaa">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleMuokkaaSuoritusta" text="Muokkaa suoritusta" />
                        <MenuItem mnemonicParsing="false" onAction="#handleTulosta" text="Tulosta" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Apua">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleVersio" text="Versio" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label text="Treenisovellus">
               <font>
                  <Font size="30.0" />
               </font>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleUusiSuoritus" text="Suoritukset">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Label text="Viimeisin suoritus:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <bottom>
      <VBox alignment="BOTTOM_RIGHT" prefHeight="0.0" prefWidth="600.0" BorderPane.alignment="BOTTOM_RIGHT">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handlePaivitaLista" text="Päivitä">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handlePoistuEtusivulta" text="Poistu">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </bottom>
   <left>
      <ScrollBorder BorderPane.alignment="CENTER">
         <children>
            <ListChooser fx:id="chooserSuoritukset" prefWidth="150.0" rivit="Treeni 013&#10;Treeni 014&#10;Treeni 015&#10;Treeni 016&#10;" />
         </children>
      </ScrollBorder>
   </left>
   <center>
      <GridPane fx:id="gridSuoritukset" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Päivämäärä:">
               <font>
                  <Font size="20.0" />
               </font>
               <GridPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </GridPane.margin>
            </Label>
            <TextField GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </GridPane.margin>
            </TextField>
         </children>
      </GridPane>
   </center>
</BorderPane>
